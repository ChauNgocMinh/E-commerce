<style>
    .overlay {
        position: absolute;
        bottom: 100px;
        left: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        padding: 20px;
        width: 500px;
        color: black;
    }

    .btn-watch {
        background-color: #F0592A;
        color: white;
        border: none;
        border-radius: 30px;
        padding: 0 70px;
        cursor: pointer;
        margin-top: 10px;
        font-size: 16px;
        height: 50px;
        font-weight: bold;
    }

    .filter {
        border: 1px solid black;
        border-radius: 8px;
        padding: 16px;
        width: 240px;
        height: fit-content;
    }

        .filter h4 {
            margin-bottom: 12px;
        }

    .checkbox-group label {
        display: block;
        margin-bottom: 8px;
    }

    .form-control.rounded {
        border-radius: 25px 0 0 25px;
    }

    .input-group .btn {
        border-radius: 0 25px 25px 0;
    }

    .btn-search {
        background-color: white !important;
        border-left: none;
        border-color: black;
        color: black !important;
    }

    .form-control {
        border-radius: 25px 0 0 25px !important;
        border-color: black;
    }

    .keyword {
        display: flex;
        gap: 10px;
    }

    .keyword-item {
        background-color: #f0f0f0;
        padding: 5px 15px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, font-weight 0.3s ease;
    }

        .keyword-item:hover {
            background-color: #F5F5F5;
            color: #757575;
        }

        .keyword-item.selected {
            background-color: #2C2C2C;
            color: white;
            font-weight: bold;
        }

    .movie-cart {
        margin: 20px 0;
    }

    .title-movie a {
        color: black !important;
    }
</style>
