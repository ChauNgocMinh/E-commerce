@{
    ViewData["Title"] = "Login Page";
}

<style>
    .login-card {
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 5px;
    }

    .register-link {
        display: inline-block;
        margin-top: 15px;
    }
</style>

<div class="container mt-5 mb-5 login">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-body">
                    <h3 class="text-center">Đăng nhập</h3>

                    <form asp-action="Login" asp-controller="User" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Tài khoản</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Nhập email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Nhập mật khẩu" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Đăng nhập</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="#">Quên mật khẩu?</a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a asp-action="Register" asp-controller="User" class="btn btn-link register-link">Chưa có tài khoản? Đăng ký tại đây</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
