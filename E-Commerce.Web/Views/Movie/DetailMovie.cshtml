@using E_Commerce.Application.Response.MovieResponse;
@inject UserService UserService
@model MovieResponse

@{
    bool isVipUser = await UserService.IsVipAsync();
    bool isMovieFree = Model.IsFree;
}

@{
    ViewData["Title"] = "Movie Detail Page";
     var reviews = new List<dynamic>
     {
         new { Title = "Review Title 1", Body = "Review Body 1", Name = "Review Name 1", Stars = 5, Image = "/userreview.png" },
         new { Title = "Review Title 2", Body = "Review Body 2", Name = "Review Name 2", Stars = 4, Image = "/userreview.png" },
         new { Title = "Review Title 3", Body = "Review Body 3", Name = "Review Name 3", Stars = 5, Image = "/userreview.png" }
     };

     var films = new List<dynamic>
     {
         new { Title = "Liên hoa lâu", Image = "/lienhoalau.png" },
         new { Title = "Đường triều Qủy Sự Lục", Image = "/duongtrieuquysuluc.png" },
         new { Title = "Nạn nhân không hoàn hảo", Image = "/nannhankhonghoanhao.jpg" },
         new { Title = "Thợ săn tí hon", Image = "/thosantihon.png" }
     };

 }
 
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
        font-size: 16px;
    }

    a {
        text-decoration: none;
        color: inherit; /* Kế thừa màu sắc của phần tử cha */
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .description-Right {
        background-color: #222;
        color: #fff;
        padding: 20px;
        border-radius: 10px;
    }

    .description-Right button {
        background-color: #e63946; /* Màu nút */
        color: white;
        padding: 10px;
        border-radius: 5px;
        border: none;
        transition: background-color 0.3s;
    }

    .description-Right button:hover {
        background-color: #d62839; /* Màu khi di chuột qua */
    }

    .custom-border {
        border: 1px solid #444;
        border-radius: 0.5rem;
        background-color: #333; /* Màu nền của khung */
        padding: 15px;
    }

    .review ul {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

    .review li {
        flex: 0 0 30%;
        margin: 0 10px;
        background-color: #f8f9fa; /* Màu nền của đánh giá */
        padding: 15px;
        border-radius: 10px;
        transition: transform 0.3s;
    }

    .review li:hover {
        transform: scale(1.05); /* Phóng to khi di chuột */
    }

    .review img {
        border-radius: 50%;
        object-fit: cover;
    }

    .filmRecommand h2 {
        margin: 20px 0;
        color: #e63946; /* Màu tiêu đề */
    }

    .filmRecommand ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 0;
    }

    .filmRecommand li {
        flex: 1 1 200px;
        margin: 10px;
        max-width: 250px;
        text-align: center;
        transition: transform 0.3s;
    }

    .filmRecommand li:hover {
        transform: scale(1.05); 
    }

    .filmRecommand img {
        max-width: 100%;
        height: auto;
        border-radius: 10px; 
    }

    .filmRecommand h7 {
        font-weight: bold;
        color: #333; 
    }

    .btn-close{
        width: 33px;
        border: none;
        background: red;
        color: white;
        border-radius: 2px;
    }
</style>

<div class="container mt-5">
    <div class="description row justify-content-center">
        <div class="description-Left col-md-6 col-sm-12" style="position: relative;">
            <img src="@Model.MainImageUrl" style="width: 100%; max-height: 500px; height: auto; object-fit: cover;" alt="" />
        </div>

        <div class="description-Right col-md-6 col-sm-12 d-flex flex-column ">
            <h3>@Model.Name</h3>
            <div class=" ">Tag</div>
            <ul class="list-unstyled d-flex">
                <li class="me-2 p-2 rounded-3">Cổ trang</li>
                <li class="me-2 p-2 rounded-3">Hành động</li>
                <li class="me-2 p-2 rounded-3">120 phút</li>
            </ul>
            @if (isMovieFree || isVipUser)
            {
                <button data-toggle="modal" data-target="#videoModal">Xem ngay</button>
            }
            else
            {
                <span>Chỉ dành cho tài khoản VIP</span>
            }
            <div class="custom-border p-3 mt-3">
                <h4>Giới thiệu</h4>
                @Model.Description
            </div>
        </div>
    </div>

    <!-- Đánh giá -->
    <div class="review mt-4">
        <h4>Đánh giá</h4>
        <ul class="list-unstyled">
            @foreach (var review in reviews)
            {
                <li class="me-2 p-2 rounded-3 mb-3 custom-border">
                    <div class="d-flex">
                        @for (int i = 0; i < review.Stars; i++)
                        {
                            <i class="fa-regular fa-star"></i>
                        }
                    </div>
                    <h5>@review.Title</h5>
                    <span>@review.Body</span>
                    <div class="d-flex align-items-center mt-2">
                        <img src="@review.Image" alt="" class="me-2" style="width: 50px; height: 50px;" />
                        <span>@review.Name</span>
                    </div>
                </li>
            }
        </ul>
    </div>

    <!-- Phim gợi ý -->
    <div class="filmRecommand align-content-center">
        <h2 class="text-center">Có thể bạn sẽ thích</h2>
        <ul class="list-unstyled d-flex flex-wrap justify-content-center">
            @foreach (var film in films)
            {
                <li class="me-2 p-2 rounded-3 custom-border">
                    <img src="@film.Image" alt="@film.Title" style="max-width: 100%; height: auto;" />
                    <h7>@film.Title</h7>
                </li>
            }
        </ul>
    </div>
</div>

<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="videoModalLabel">Xem Video</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <video controls style="width: 100%;">
                    <source src="@Model.UrlMedia" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>