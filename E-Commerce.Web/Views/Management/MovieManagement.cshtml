@{
    ViewData["Title"] = "User Manager Page";
}
<style>
    * {
        padding: 0;
        margin: 0;
        text-decoration: none;
    }

    .input-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

    .box {
        border: 2px solid #000;
        border-radius: 10px;
        padding: 10px;
        background-color: #F7F2FA;
    }

    .menu {
        background-color: #F8F9FC;
        color: black;
        cursor: pointer;
        border: 1px solid black;
        border-radius: 10px;
    }

    .menu-item:hover {
        background-color: #E8DEF8;
        border-radius: 50px;
    }

    .item, .menu-item, th, td {
        padding: 10px;
    }

    .bg-red, th {
        background-color: #F8F9FC;
        color: black;
    }

    .bg-white {
        background-color: white;
        color: black;
    }

    .action-menu {
        display: none;
        position: absolute;
        background-color: white;
        width: 150px;
        border: 1px solid #ccc;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        right: 0;
    }

    .action-menu ul {
        list-style: none;
    }

    .action-menu ul li {
        padding: 5px 0;
    }

    .action-menu ul li a {
        text-decoration: none;
        color: black;
        transition: color 0.3s;
    }

    .btn-custom {
        background-color: #1a71d1;
        color: white;
        padding: 8px 16px;
        border: none; 
        border-radius: 20px; 
        cursor: pointer;
        text-align: center;
        display: inline-block;
        transition: background-color 0.3s ease;
        font-size: 14px; 
    }

    .btn-custom:hover {
        background-color: #45a049;
    }

    .input-group {
        display: flex;
        align-items: center;
        position: relative;
    }

    .input-group input {
        padding-right: 40px; 
        border-radius: 20px;
        width: 100%;
    }

    .input-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

</style>

<div class="container w-75 mt-5">
    <div class="row justify-content-around">
        <div class="col-md-2">
            <div class="menu rounded-3 p-3">
                <h3 class="text-center">Menu</h3>
                <div class="menu-item p-2">Quản lý phim</div>
                <div class="menu-item p-2">Quản lý người dùng</div>
                <div class="menu-item p-2">Quản lý doanh thu</div>
            </div>
        </div>

        <div class="col-md-9 mb-5">
            <div class="box">
                <div class="search d-flex justify-content-between align-items-center">
                    <div class="input-group" style="width: 70%;">
                        <input type="search" name="search" placeholder="Tìm kiếm" class="form-control" />
                        <span class="input-icon">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </span>
                    </div>
                    <div class="ml-3">
                        <a asp-action="" asp-controller="" class="btn btn-custom">+ Thêm</a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Header 1</th>
                                <th>Header 2</th>
                                <th>Header 3</th>
                                <th>Header 4</th>
                                <th>Header 5</th>
                                <th>Header 6</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 16; i++)
                            {
                                <tr class="@(i % 2 == 0 ? "bg-red" : "bg-white")">
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td class="position-relative">
                                        <i class="fa-solid fa-ellipsis-vertical toggle-action-menu" style="cursor: pointer;"></i>
                                        <div class="action-menu">
                                            <ul>
                                                <li><a href="#" class="text-primary">Xem chi tiết</a></li>
                                                <li><a href="#" class="text-warning">Sửa</a></li>
                                                <li><a href="#" class="text-danger">Xóa</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.toggle-action-menu').forEach(item => {
        item.addEventListener('click', event => {
            const actionMenu = item.nextElementSibling;
            document.querySelectorAll('.action-menu').forEach(menu => {
                if (menu !== actionMenu) {
                    menu.style.display = 'none';
                }
            });
            actionMenu.style.display = actionMenu.style.display === 'block' ? 'none' : 'block';
        });
    });
</script>
