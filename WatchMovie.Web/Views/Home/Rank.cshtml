@{
    ViewData["Title"] = "Rank Page";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    * {
        padding: 0px;
        margin: 0px;
        list-style: none;
    }

    .modal-body {
        display: flex;
        flex-direction: column;
    }

    .modal-input {
        width: 100%; 
        margin-bottom: 10px; 
    }

    .input-group {
        position: relative;
    }

        .input-group input {
            padding-right: 30px; 
            border-radius: 20px; 
        }

    .input-icon {
        position: absolute;
        right: 10px; 
        top: 50%;
        transform: translateY(-50%); 
        pointer-events: none; 
    }

    .box {
        border: 1px solid #000;
        height: 400px;
        border-radius: 10px;
        padding: 10px;
        background-color: #F7F2FA;
    }

    .menu {
        background-color: #F8F9FC;
        color: black;
        cursor: pointer;
    }

    .menu-item:hover {
        background-color: #E8DEF8; 
        border-radius: 50px;
    }

    .item {
        padding: 10px 0;
    }

    .add-film .search input {
        width: 100%;
    }

    .bg-red {
        background-color: #F8F9FC;
        color: black;
    }

    .bg-white {
        background-color: white;
        color: black;
    }

    th {
        background-color: #F8F9FC;
        color: black;
    }

    .action-menu {
        display: none;
        position: absolute;
        background-color: white;
        width: 150px;
        border: 1px solid #ccc;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        right: 0;
    }

        .action-menu ul li {
            padding: 5px 0;
        }

            .action-menu ul li a {
                text-decoration: none;
                color: black;
                transition: color 0.3s;
            }

    .custom-border {
        border: 1px solid black;
        border-radius: 0.5rem;
        text-align: center;
    }

    .order-user ul li {
        width: 150px;
        cursor: pointer;
    }

    .filmRecommand ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 0;
    }

    .filmRecommand li {
        flex: 1 1 200px;
        margin: 10px;
        max-width: 250px;
    }

        .filmRecommand li h7 {
            font-weight: bold;
        }

    .filmRecommand img {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="container w-75 mt-5">
    <div class="row justify-content-between">
        <div class="col-md-4">
            <div class="menu rounded-3 p-3">
                <div class="menu-item p-2 hover-bg">
                    Thông tin cá nhân
                </div>
                <div class="menu-item p-2 hover-bg" data-toggle="modal" data-target="#changePasswordModal">
                    Đổi mật khẩu
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="box">
                <div class="container">
                    <div class="row ">
                        <div class="col-3">
                            <div class="img-User">
                                <img src="~/userreview.png" alt="Alternate Text" class="img-fluid rounded-circle" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="info-User">
                                <ul>
                                    <li>Họ tên: Nguyễn Văn A</li>
                                    <li>Tài khoản: nguyen.a</li>
                                    <li>Email: nguyen.a@gmail.com</li>
                                    <li>Hạng: Vip</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-6 d-flex justify-content-end align-items-start">
                            <div class="order-user">
                                <ul class="list-unstyled">
                                    <li class="custom-border bg-dark rounded-3 text-white mb-2 p-2" data-toggle="modal" data-target="#changePasswordModal">Đổi mật khẩu</li>
                                    <li class="custom-border bg-primary rounded-3 text-white mb-2 p-2">Nạp vip</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="filmRecommand align-content-center">
        <h2 class="text-center">Có thể bạn sẽ thích</h2>
        <ul class="list-unstyled d-flex flex-wrap justify-content-center">
            <li class="me-2 p-2 rounded-3 custom-border">
                <img src="~/lienhoalau.png" alt="" style="max-width: 100%; height: auto;" />
                <h7>Liên hoa lâu</h7>
            </li>
            <li class="me-2 p-2 rounded-3 custom-border">
                <img src="~/duongtrieuquysuluc.png" alt="" style="max-width: 100%; height: auto;" />
                <h7>Đường triều Qủy Sự Lục</h7>
            </li>
            <li class="me-2 p-2 rounded-3 custom-border">
                <img src="~/nannhankhonghoanhao.jpg" alt="" style="max-width: 100%; height: auto;" />
                <h7>Nạn nhân không hoàn hảo</h7>
            </li>
            <li class="me-2 p-2 rounded-3 custom-border">
                <img src="~/thosantihon.png" alt="" style="max-width: 100%; height: auto;" />
                <h7>Thợ săn tí hon</h7>
            </li>
        </ul>
    </div>

    <!-- Modal Đổi mật khẩu -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">Đổi mật khẩu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="changePasswordForm">
                        <div class="form-group">
                            <label for="oldPassword">Mật khẩu cũ</label>
                            <input type="password" class="form-control" id="oldPassword" placeholder="Nhập mật khẩu cũ" required>
                        </div>
                        <div class="form-group">
                            <label for="newPassword">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Nhập lại mật khẩu mới" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark w-100" id="changePasswordButton">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#changePasswordButton").click(function () {
            // Xử lý thay đổi mật khẩu ở đây
            const oldPassword = $("#oldPassword").val();
            const newPassword = $("#newPassword").val();
            const confirmPassword = $("#confirmPassword").val();

            // Kiểm tra xem mật khẩu mới và xác nhận mật khẩu mới có khớp hay không
            if (newPassword !== confirmPassword) {
                alert("Mật khẩu mới và xác nhận mật khẩu không khớp.");
                return;
            }

            // Thực hiện AJAX hoặc logic thay đổi mật khẩu ở đây
            alert("Mật khẩu đã được thay đổi thành công.");
            $('#changePasswordModal').modal('hide'); // Ẩn modal sau khi thay đổi mật khẩu
        });
    });
</script>
