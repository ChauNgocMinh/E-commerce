@using WatchMovie.Application.Response.MovieResponse
@model List<MovieFeedBackResponse>

<div class="review mt-4">
    <h4>Đánh giá của người dùng</h4>
    <ul class="list-unstyled">
        @foreach (var review in Model)
        {
            <li class="me-2 p-2 mb-3 custom-border">
                <div class="d-flex">
                    @for (int i = 1; i <= 5; i++) 
                    {
                        if (i <= review.Rate)
                        {
                            <i class="fa-solid fa-star" style="color: #f39c12;"></i>
                        }
                        else
                        {
                            <i class="fa-regular fa-star" style="color: #ccc;"></i>
                        }
                    }
                </div>
                <span>Nội dung: @review.Comment</span>
                <div class="d-flex align-items-center mt-2">
                    <span>Người dùng: @review.Users.DisplayName</span>
                </div>
            </li>
        }
    </ul>
</div>
