@model WatchMovie.Domain.ViewModel.MovieViewModel

<style>
    .page-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-check-label {
        margin-left: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        display: block;
        margin: 0 auto;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
        font-size: 16px;
        display: block;
        margin: 20px auto 0;
    }

    .form-group span.text-danger {
        font-size: 12px;
    }
</style>

<div class="form-container">
    <h2 class="page-title">Thêm phim mới</h2>
    <form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tên phim</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên phim" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Hình ảnh phim</label>
            <input type="file" asp-for="MovieImgBanner" class="form-control" />
            <span asp-validation-for="MovieImgBanner" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Link phim</label>
            <input asp-for="VideoFile" class="form-control" placeholder="Nhập đường dẫn" />
            <span asp-validation-for="VideoFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="IsFree" class="form-check-input" type="checkbox" />
            <label asp-for="IsFree" class="form-check-label">Miễn phí?</label>
            <span asp-validation-for="IsFree" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Thể loại phim</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">Chọn thể loại</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-controller="MovieManagement" asp-action="MovieManagement" class="btn btn-secondary">Trở về</a>
    </form>
</div>
